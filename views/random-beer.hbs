{{#each beers}}
    <section class="random-beer">
      <aside>
        <div>
          <img src="{{this.image_url}}" alt="craft beer bottle">
        </div>
      </aside>
    <article>
    <h2>{{this.name}}</h2>
      <h3>{{this.tagline}}</h3>
      <p>{{this.description}}</p>
      <h3>Food Pairing</h3>
      <ul>
        {{#each this.food_pairing}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <p>{{this.brewers_tips}}</p>
    </article>
    </section>
  {{/each}}
