<section>
  <div class="beers-random-container">
    {{#each beers}}
    <div class="random-beer">
      <img src="{{image_url}}" alt="{{name}}">
    </div>
    <div class="random-description">
      <h1>{{name}}</h1>
      <h4>{{tagline}}</h4>
      <p>{{description}}</p>
      <h2>Food pairing</h2>
      <ul class="food-pairing">
        {{#each food_pairing}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <p><strong>Brewer Tips:</strong> {{brewers_tips}}</p>
    </div>
    {{/each}}
  </div>
</section>