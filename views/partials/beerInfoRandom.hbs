<div class="image">
  {{#if image_url}}
    <img src="{{image_url}}" alt="{{name}}">
  {{else}}
    <img src="./images/beer.png" alt="Beer">
  {{/if}}
</div>
<div class="content">
  <h2>{{name}}</h2>
  <h3>{{tagline}}</h3>
  <p>{{description}}</p>
  <h4>Food pairing</h4>
  <ul>
  {{#each food_pairing}}
    <li>{{this}}</li>
    {{else}}
    <li>There are no food pairings.</li>
  {{/each}}
  </ul>
  <p><strong>Brewers Tips:</strong> {{brewers_tips}}</p>
</div>