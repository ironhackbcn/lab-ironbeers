<div class="random-beer-container">
  <div class="beer-image-container">
    <img class="random-beer-image" src="{{image_url}}" alt="">
  </div>
  <div class="right-panel">
    <div class="beer-header">
      <p class="beer-name">{{name}}</p>
      <p class="beer-tagline">{{tagline}}</p>
    </div>
    <div class="beer-body">
      <div class="beer-text">
        <p>{{description}}</p>
      </div>
      <div class="beer-text">
        <h2>Food Pairing</h2>
        <ul class="food-list">
          {{#each food_pairing}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="beer-text">
        <p><strong>Brewer's tips: </strong>{{food_pairing}}</p>
      </div>
    </div>
  </div>
</div>