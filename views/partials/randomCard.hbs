<div class="container-beer-random">
    <img src="{{this.image_url}}" alt="">
    <div class="container-info">
        <h1>{{this.name}}</h1>
        <h3>{{this.tagline}}</h3>
        <p>{{this.description}}</p>
        <span><b>Food Pairing</b></span>
        <ul>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <span><b>Brewer tips</b></span>
        <p>{{brewers_tips}}</p>
    </div>
</div>